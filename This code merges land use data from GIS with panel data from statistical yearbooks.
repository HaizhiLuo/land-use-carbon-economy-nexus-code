import pandas as pd

file1 = 'CarbonEmission.xlsx'
file2 = 'LandUse.xlsx'
output_file = 'MergedData.xlsx'

with pd.ExcelWriter(output_file) as writer:
    for sheet in ['2010', '2015', '2020']:
        df1 = pd.read_excel(file1, sheet_name=sheet)
        df2 = pd.read_excel(file2, sheet_name=sheet)
        merged_df = pd.merge(df1, df2, on='ID', how='inner')
        merged_df.to_excel(writer, sheet_name=sheet, index=False)

print("All saved", output_file)
